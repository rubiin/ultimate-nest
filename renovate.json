{
   "$schema":"https://docs.renovatebot.com/renovate-schema.json",
   "extends":[
      "config:base"
   ],
   "assignees":[
      "rubiin"
   ],
   "labels":[
      "dependencies"
   ],
   "prCreation":"immediate",
   "packageRules":[
      {
         "matchPackagePatterns":[
            "*"
         ],
         "matchUpdateTypes":[
            "minor",
            "patch"
         ],
         "groupName":"all non-major deps"
      },
      {
         "matchPackagePatterns":[
            "*"
         ],
         "matchUpdateTypes":[
            "major"
         ],
         "groupName":"all major deps"
      }
   ]
}

{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2017",
		"moduleResolution": "node",
		"sourceMap": false,
		"outDir": "./dist",
		"baseUrl": "src",
		"incremental": true,
		"skipLibCheck": true,
		"paths": {
			"@common/*": ["./common/*"],
			"@modules/*": ["./modules/*"],
			"@config/*": ["./config/*"],
			"@entities": ["./entities/index"],
			"@lib/*": ["./lib/*"]
		}
	},
	"include": ["test/**/*", "src/**/*"]
}

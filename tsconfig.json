{
  "extends": "@rubiin/tsconfig",
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@lib/*": [
        "./lib/*"
      ],
      "@common/*": [
        "./common/*"
      ],
      "@modules/*": [
        "./modules/*"
      ],
      "@entities": [
        "./entities"
      ],
      "@mocks": [
        "./_mocks_"
      ],
      "@generated": [
        "./generated"
      ]
    },
    "types": [
      "./src/common/@types/typings/globals.d.ts"
    ],
    "declaration": true,
    "outDir": "dist"
  },
  "include": [
    "test/**/*",
    "src/**/*",
    "eslint.config.js"
  ]
}

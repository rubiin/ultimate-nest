{
	"name": "ultimate-nest-template",
	"version": "1.0.0",
	"description": "Nest TypeScript starter repository",
	"license": "MIT",
	"repository": "https://github.com/rubiin/ultimate-nest",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "eslint '{src,apps,libs,test}/**/*.ts' --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "echo 'No e2e tests implemented yet.'",
		"orm": "npx mikro-orm",
		"orm:init": "npm run orm migration:create --initial",
		"orm:create": "npm run orm migration:create",
		"orm:up": "npm run orm migration:up",
		"orm:down": "npm run orm migration:down"
	},
	"dependencies": {
		"@mikro-orm/core": "^4.4.2",
		"@mikro-orm/nestjs": "^4.2.0",
		"@mikro-orm/postgresql": "^4.4.2",
		"@mikro-orm/reflection": "^4.4.2",
		"@mikro-orm/sql-highlighter": "^1.0.1",
		"@nestjs/common": "7.6.11",
		"@nestjs/config": "^0.6.3",
		"@nestjs/core": "7.6.11",
		"@nestjs/jwt": "^7.2.0",
		"@nestjs/passport": "^7.1.5",
		"@nestjs/platform-express": "7.6.11",
		"@nestjs/swagger": "^4.7.12",
		"@rubiin/js-utils": "^1.7.0",
		"argon2": "^0.27.1",
		"cache-manager-redis-store": "^2.0.0",
		"class-transformer": "^0.3.2",
		"class-validator": "0.13.1",
		"compression": "^1.7.4",
		"csurf": "^1.11.0",
		"date-fns": "^2.17.0",
		"dotenv": "^8.2.0",
		"eta": "^1.12.1",
		"express": "^4.17.1",
		"helmet": "^4.4.1",
		"joi": "^17.4.0",
		"nanoid": "^3.1.20",
		"nest-winston": "^1.4.0",
		"nestjs-i18n": "^8.0.11",
		"nodemailer": "^6.4.17",
		"passport": "^0.4.1",
		"passport-jwt": "^4.0.0",
		"puppeteer": "^7.0.4",
		"reflect-metadata": "0.1.13",
		"rxjs": "6.6.3",
		"swagger-ui-express": "^4.1.6",
		"threads": "^1.6.3",
		"twilio": "^3.55.1",
		"winston": "^3.3.3",
		"winston-daily-rotate-file": "^4.5.0"
	},
	"devDependencies": {
		"@mikro-orm/cli": "^4.4.2",
		"@nestjs/cli": "7.5.4",
		"@nestjs/schematics": "7.2.7",
		"@nestjs/testing": "7.6.11",
		"@types/compression": "^1.7.0",
		"@types/csurf": "^1.11.0",
		"@types/express": "4.17.11",
		"@types/node": "14.14.25",
		"@types/nodemailer": "^6.4.0",
		"@types/passport": "^1.0.6",
		"@types/passport-jwt": "^3.0.4",
		"@types/supertest": "2.0.10",
		"@types/swagger-ui-express": "^4.1.2",
		"@typescript-eslint/eslint-plugin": "4.15.0",
		"@typescript-eslint/parser": "4.15.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "7.19.0",
		"eslint-config-prettier": "7.2.0",
		"eslint-plugin-import": "2.22.1",
		"husky": "^5.0.9",
		"jest": "26.6.3",
		"lint-staged": "^10.5.4",
		"prettier": "2.2.1",
		"supertest": "6.1.3",
		"ts-jest": "26.5.1",
		"ts-loader": "8.0.16",
		"ts-node": "9.1.1",
		"tsconfig-paths": "3.9.0",
		"typescript": "^4.1.4"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"moduleNameMapper": {
			"^@utils/(.*)$": "<rootDir>/utils/$1",
			"^@common/(.*)$": "<rootDir>/common/$1",
			"^@modules/(.*)$": "<rootDir>/modules/$1",
			"^@config/(.*)$": "<rootDir>/config/$1",
			"^@entities/(.*)$": "<rootDir>/entities/$1",
			"^@dtos/(.*)$": "<rootDir>/dtos/$1"
		},
		"rootDir": "src",
		"testRegex": ".spec.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"coverageDirectory": "../coverage",
		"testEnvironment": "node",
		"coverageReporters": [
			"text",
			"html"
		]
	},
	"mikro-orm": {
		"useTsNode": true,
		"configPaths": [
			"./src/mikro-orm.config.ts",
			"./dist/mikro-orm.config.js"
		]
	},
	"engines": {
		"node": ">=12"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{json,md,scss,yaml,yml}": [
			"prettier --write"
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}

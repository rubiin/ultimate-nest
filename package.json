{
	"name": "ultimate-nest-template",
	"version": "1.0.0",
	"description": "Nest TypeScript starter repository",
	"license": "MIT",
	"repository": "https://github.com/rubiin/ultimate-nest",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "eslint '{src,apps,libs,test}/**/*.ts' --cache --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "echo 'No e2e tests implemented yet.'",
		"orm": "npx mikro-orm",
		"orm:init": "npm run orm migration:create --initial",
		"orm:create": "npm run orm migration:create",
		"orm:up": "npm run orm migration:up",
		"orm:down": "npm run orm migration:down"
	},
	"dependencies": {
		"@deepkit/core": "^1.0.1-alpha.58",
		"@deepkit/type": "^1.0.1-alpha.58",
		"@golevelup/nestjs-modules": "^0.4.3",
		"@mikro-orm/cli": "^4.5.9",
		"@mikro-orm/core": "^4.5.9",
		"@mikro-orm/nestjs": "^4.3.1",
		"@mikro-orm/postgresql": "^4.5.9",
		"@mikro-orm/reflection": "^4.5.9",
		"@mikro-orm/sql-highlighter": "^1.0.1",
		"@nestjs/common": "8.2.4",
		"@nestjs/config": "^1.1.5",
		"@nestjs/core": "8.2.4",
		"@nestjs/jwt": "^8.0.0",
		"@nestjs/passport": "^8.0.1",
		"@nestjs/platform-express": "^8.2.4",
		"@nestjs/swagger": "^5.1.5",
		"@rubiin/js-utils": "^1.9.5",
		"argon2": "^0.28.3",
		"cache-manager": "^3.6.0",
		"cache-manager-redis-store": "^2.0.0",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.13.2",
		"compression": "^1.7.4",
		"csurf": "^1.11.0",
		"date-fns": "^2.27.0",
		"dotenv": "^10.0.0",
		"eslint-config-google": "^0.14.0",
		"eta": "^1.12.3",
		"firebase-admin": "^10.0.1",
		"helmet": "^4.6.0",
		"joi": "^17.5.0",
		"nanoid": "^3.1.30",
		"nest-access-control": "^2.0.3",
		"nest-winston": "^1.6.2",
		"nestjs-i18n": "^8.2.2",
		"nestjs-minio": "^2.1.11",
		"nodemailer": "^6.7.2",
		"passport": "^0.5.2",
		"passport-jwt": "^4.0.0",
		"piscina": "^3.2.0",
		"puppeteer": "^13.0.0",
		"reflect-metadata": "0.1.13",
		"rxjs": "^7.4.0",
		"sharp": "^0.29.3",
		"slugify": "^1.6.4",
		"swagger-ui-express": "^4.3.0",
		"twilio": "^3.72.0",
		"winston": "^3.3.3",
		"winston-daily-rotate-file": "^4.5.5"
	},
	"devDependencies": {
		"@firebase/app-types": "0.x",
		"@nestjs/cli": "8.1.6",
		"@nestjs/schematics": "8.0.5",
		"@nestjs/testing": "8.2.4",
		"@types/cache-manager": "^3.4.2",
		"@types/compression": "^1.7.2",
		"@types/faker": "^5.5.9",
		"@types/node": "^17.0.1",
		"@types/nodemailer": "^6.4.4",
		"@types/passport": "^1.0.7",
		"@types/passport-jwt": "^3.0.6",
		"@types/qs": "6.9.7",
		"@types/sharp": "^0.29.4",
		"@types/supertest": "2.0.11",
		"@typescript-eslint/eslint-plugin": "^5.7.0",
		"@typescript-eslint/parser": "^5.7.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.5.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "2.25.3",
		"eslint-plugin-no-secrets": "^0.8.9",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-unicorn": "^39.0.0",
		"husky": "^7.0.4",
		"jest": "27.4.5",
		"lint-staged": "^12.1.3",
		"prettier": "^2.5.1",
		"supertest": "6.1.6",
		"ts-jest": "27.1.2",
		"ts-loader": "9.2.6",
		"ts-node": "10.4.0",
		"tsconfig-paths": "3.12.0",
		"typescript": "^4.5.4",
		"webpack": "^5.65.0"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"moduleNameMapper": {
			"^@utils/(.*)$": "<rootDir>/utils/$1",
			"^@common/(.*)$": "<rootDir>/common/$1",
			"^@modules/(.*)$": "<rootDir>/modules/$1",
			"^@config/(.*)$": "<rootDir>/config/$1",
			"^@entities/(.*)$": "<rootDir>/entities/$1",
			"^@dtos/(.*)$": "<rootDir>/dtos/$1"
		},
		"rootDir": "src",
		"testRegex": ".spec.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"coverageDirectory": "../coverage",
		"testEnvironment": "node",
		"coverageReporters": [
			"text",
			"html"
		]
	},
	"mikro-orm": {
		"useTsNode": true,
		"configPaths": [
			"./src/common/database/mikro-orm-cli.config.ts",
			"./dist/common/database/mikro-orm-cli.config.js"
		]
	},
	"engines": {
		"node": ">=12"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"eslint --cache --fix",
			"prettier --write"
		],
		"*.{json,md,scss,yaml,yml}": [
			"prettier --write"
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}

{
	"name": "ultimate-nest-template",
	"version": "1.2.0",
	"description": "NestJS + MikroORM realworld API example",
	"license": "MIT",
	"repository": "https://github.com/rubiin/ultimate-nest",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"start:frontend": "cd frontend && yarn dev",
		"lint": "eslint '{src,test}/**/*.ts' --cache --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "echo 'No e2e tests implemented yet.'",
		"orm": "npx mikro-orm",
		"orm:init": "npm run orm migration:create --initial",
		"orm:create": "npm run orm migration:create",
		"orm:up": "npm run orm migration:up",
		"orm:down": "npm run orm migration:down"
	},
	"dependencies": {
		"@golevelup/nestjs-modules": "^0.5.0",
		"@mikro-orm/core": "^5.0.4",
		"@mikro-orm/migrations": "^5.0.4",
		"@mikro-orm/mysql": "^5.0.4",
		"@mikro-orm/nestjs": "^5.0.0",
		"@mikro-orm/postgresql": "^5.0.4",
		"@mikro-orm/reflection": "^5.0.4",
		"@mikro-orm/sql-highlighter": "^1.0.1",
		"@nestjs/axios": "^0.0.6",
		"@nestjs/common": "8.3.1",
		"@nestjs/config": "^1.2.0",
		"@nestjs/core": "8.3.1",
		"@nestjs/jwt": "^8.0.0",
		"@nestjs/passport": "^8.2.1",
		"@nestjs/platform-express": "^8.3.1",
		"@nestjs/serve-static": "^2.2.2",
		"@nestjs/swagger": "^5.2.0",
		"@rubiin/js-utils": "^2.1.6",
		"argon2": "^0.28.4",
		"cache-manager": "^3.6.0",
		"cache-manager-redis-store": "^2.0.0",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.13.2",
		"compression": "^1.7.4",
		"csurf": "^1.11.0",
		"date-fns": "^2.28.0",
		"dotenv": "^16.0.0",
		"eta": "^1.12.3",
		"firebase-admin": "^10.0.2",
		"helmet": "^5.0.2",
		"hpp": "^0.2.3",
		"joi": "^17.6.0",
		"nanoid": "^3.3.1",
		"nest-winston": "^1.6.2",
		"nestjs-i18n": "^8.2.2",
		"nestjs-minio": "^2.1.13",
		"nodemailer": "^6.7.2",
		"passport": "0.5.2",
		"passport-jwt": "4.0.0",
		"piscina": "^3.2.0",
		"puppeteer": "^13.4.0",
		"reflect-metadata": "0.1.13",
		"rxjs": "^7.5.4",
		"sharp": "^0.30.1",
		"swagger-ui-express": "^4.3.0",
		"twilio": "^3.75.0",
		"type-fest": "^2.12.0",
		"winston": "^3.6.0",
		"winston-daily-rotate-file": "^4.6.1"
	},
	"devDependencies": {
		"@firebase/app-compat": "0.x",
		"@firebase/app-types": "0.x",
		"@golevelup/ts-jest": "^0.3.2",
		"@mikro-orm/cli": "^5.0.4",
		"@mikro-orm/seeder": "^5.0.4",
		"@nestjs/cli": "8.2.1",
		"@nestjs/schematics": "8.0.7",
		"@nestjs/testing": "8.3.1",
		"@types/argon2": "^0.15.0",
		"@types/cache-manager": "^3.4.2",
		"@types/cache-manager-redis-store": "^2.0.1",
		"@types/compression": "^1.7.2",
		"@types/csurf": "^1.11.2",
		"@types/dotenv": "^8.2.0",
		"@types/helmet": "^4.0.0",
		"@types/hpp": "^0.2.2",
		"@types/jest": "^27.4.1",
		"@types/joi": "^17.2.3",
		"@types/multer": "^1.4.7",
		"@types/nanoid": "^3.0.0",
		"@types/node": "^17.0.21",
		"@types/nodemailer": "^6.4.4",
		"@types/passport": "^1.0.7",
		"@types/passport-jwt": "^3.0.6",
		"@types/puppeteer": "^5.4.5",
		"@types/qs": "6.9.7",
		"@types/reflect-metadata": "^0.1.0",
		"@types/sharp": "^0.29.5",
		"@types/supertest": "2.0.11",
		"@types/swagger-ui-express": "^4.1.3",
		"@types/twilio": "^3.19.3",
		"@types/winston": "^2.4.4",
		"@typescript-eslint/eslint-plugin": "^5.12.1",
		"@typescript-eslint/parser": "^5.12.1",
		"cz-conventional-changelog": "3.3.0",
		"eslint": "^8.9.0",
		"eslint-config-prettier": "^8.4.0",
		"eslint-plugin-import": "2.25.4",
		"eslint-plugin-no-secrets": "^0.8.9",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-unicorn": "^41.0.0",
		"express": "^4.17.3",
		"husky": "^7.0.4",
		"jest": "27.5.1",
		"lint-staged": "^12.3.4",
		"prettier": "^2.5.1",
		"run-script-webpack-plugin": "^0.0.11",
		"supertest": "6.2.2",
		"ts-jest": "27.1.3",
		"ts-loader": "9.2.6",
		"ts-node": "10.5.0",
		"tsconfig-paths": "3.12.0",
		"typescript": "^4.5.5",
		"webpack": "^5.69.1",
		"webpack-node-externals": "^3.0.0"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"moduleNameMapper": {
			"^@utils/(.*)$": "<rootDir>/utils/$1",
			"^@common/(.*)$": "<rootDir>/common/$1",
			"^@modules/(.*)$": "<rootDir>/modules/$1",
			"^@config/(.*)$": "<rootDir>/config/$1",
			"^@entities/(.*)$": "<rootDir>/entities/$1",
			"^@dtos/(.*)$": "<rootDir>/dtos/$1"
		},
		"rootDir": "src",
		"testRegex": ".spec.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"coverageDirectory": "../coverage",
		"testEnvironment": "node",
		"coverageReporters": [
			"text",
			"html"
		]
	},
	"mikro-orm": {
		"useTsNode": true,
		"configPaths": [
			"./src/common/database/mikro-orm-cli.config.ts",
			"./dist/common/database/mikro-orm-cli.config.js"
		]
	},
	"engines": {
		"node": ">=14"
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"eslint --cache --fix",
			"prettier --write"
		],
		"*.{json,md,scss,yaml,yml}": [
			"prettier --write"
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
